{% extends 'base.html.twig' %}

{% block title %}Блог {{ user }} Статья №{{ post.id }}{% endblock %}
{% block head %}
    <h1 class="logo">Блог {{ user }}</h1>
{% endblock %}
{% block body %}
    <h2 class="genus-name">{{ post.title }}</h2>
    <div class="sea-creature-container">
        <div class="genus-details">
            <dl class="genus-details-list">
                <dt>Коротко:</dt>
                <dd>{{ post.summary }}</dd>
                <dt>Весь текст:</dt>
                <dd>{{ post.body }}</dd>
                <dt>Дата создания:</dt>
                <dd>{{ post.created.date }}</dd>
            </dl>
        </div>
    </div>

{% endblock %}

