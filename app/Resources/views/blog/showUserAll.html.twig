{% extends 'page.html.twig' %}

{% block size_title %}Блог {{ app.user.username }}{% endblock %}

{% block page_title %}Блог {{ app.user.username }}{% endblock %}

{% block main %}

        <ul>
          <li>
              <h2><a class="" href="{{ path('blog_user_add') }}">Добавить</a></h2>
          </li>
        </ul>

    {% for blog in pagination %}
        <article class="blog blog-teaser">

            <h2>
                <a href="{{ path('blog_page', { page: blog.id }) }}">{{ blog.title }}</a>
            </h2>
            <div class="container blog-container">
                <div class="field field_created">
                    {{ blog.created|date("d-m-Y H:m") }}
                </div>
                <div class="field field-body-wummary">
                    {{ blog.summary|raw }}
                </div>
                <nav class="link-menu" role="navigation">
                    <ul>
                        <li class="read-more"><a href="{{ path('blog_user_edit', { page: blog.id }) }}" >Редактировать</a></li>
                    </ul>
                </nav>
            </div>

        </article>
    {% else %}
        <div class="well">{{ 'У вас пока нет не одного блога'|trans }}</div>
    {% endfor %}
