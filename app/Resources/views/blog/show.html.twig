{% extends 'page.html.twig' %}

{% block page_title %}Статья №{{ pagination.items[0].id }}{% endblock %}

{% block main %}
    <article class="blog">
        <div class="container blog-container">
            <div class="field field_created">
                {{ pagination.items[0].created|date("d-m-Y H:m") }}
            </div>
            <div class="field field-body">
                {{ pagination.items[0].body|raw }}
            </div>

        </div>
    </article>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
