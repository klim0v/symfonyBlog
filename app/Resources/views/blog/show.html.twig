{% extends 'page.html.twig' %}

{% block page_title %} {{ post.title }} {% endblock %}

{% block main %}
    <article class="blog">
        <div class="container blog-container">
            <div class="field field_created">
                {{ post.created|date("d-m-Y H:m") }}
            </div>
            <div class="field field-body">
                {{ post.body|raw }}
            </div>

        </div>
    </article>


{% endblock %}
