{% extends 'page.html.twig' %}

{% block size_title %}Блог {% endblock %}

{% block page_title %}Публичный просмотр{% endblock %}

{% block main %}
    <div class="blog-teaser-view">

        {##}{% for blog in pagination %}
            <article class="blog blog-teaser">

                <h2 class="article-title">
                    <a href="{{ path('blog_page', { page: blog.id }) }}">{{ blog.title }}</a>
                </h2>
                <div class="container blog-container">
                    <div class="field field_created">
                        {{ blog.created|date("d-m-Y H:m") }}
                    </div>
                    <div class="field field-body-wummary">
                        {{ blog.summary|raw }}
                    </div>
                    <nav class="link-menu" role="navigation">
                        <ul>
                            <li class="read-more"><a href="{{ path('blog_page', { page: blog.id }) }}">Подробнее</a>
                            </li>
                        </ul>
                    </nav>
                </div>

            </article>
        {% else %}
            <div class="well">{{ 'У вас пока нет не одного блога'|trans }}</div>
        {% endfor %}
    </div>
    
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}